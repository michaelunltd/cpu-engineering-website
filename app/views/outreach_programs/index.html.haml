.container
  %h1 Outreach Program#index
  .pull-right
    = link_to new_outreach_program_path do
      %button.btn.btn-success.btn-sm{:role=> "button"}
        %i.glyphicon.glyphicon-plus
          Outreach Program

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Description
        %th Edit
        %th Delete

    %tbody
    - @outreach_programs.each do |outreach_program|
      %tr
        %td= outreach_program.name
        %td= outreach_program.description
        %td
          = link_to edit_outreach_program_path(outreach_program) do
            %button.btn.btn-success.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-edit
              Edit Outreach Program
        %td
          = link_to outreach_program, method: :delete, data: {confirm: 'Do you want to delete this outreach program?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do
            %button.btn.btn-danger.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-trash
                Delete
