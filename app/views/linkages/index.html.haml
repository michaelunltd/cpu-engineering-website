.container
  %h1 Linkage#index
  .pull-right
    = link_to new_linkage_path do
      %button.btn.btn-success.btn-sm{:role=> "button"}
        %i.glyphicon.glyphicon-plus
          Linkage

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Description
        %th Image
        %th Edit
        %th Delete

    %tbody
    - @linkages.each do |linkage|
      %tr
        %td= linkage.name
        %td= linkage.description
        %td= image_tag(linkage.image.thumb.url)
        %td
          = link_to edit_linkage_path(linkage) do
            %button.btn.btn-success.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-edit
              Edit Linkage
        %td
          = link_to linkage, method: :delete, data: {confirm: 'Do you want to delete this news?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do
            %button.btn.btn-danger.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-trash
                Delete
