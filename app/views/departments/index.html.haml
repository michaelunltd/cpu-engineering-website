        -#   = link_to edit_department_path(department) do
        -#     %button.btn.btn-success.btn-sm{:role=>"button"}
        -#       %i.glyphicon.glyphicon-edit
        -#       Edit Department
        -# %td
        -#   = link_to department, method: :delete, data: {confirm: 'Do you want to delete this department?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do
        -#     %button.btn.btn-danger.btn-sm{:role=>"button"}
        -#       %i.glyphicon.glyphicon-trash
