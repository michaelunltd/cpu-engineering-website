.container
  %h1 Laboratory#index
  .pull-right
    = link_to new_laboratory_path do
      %button.btn.btn-success.btn-sm{:role=> "button"}
        %i.glyphicon.glyphicon-plus
          Laboratory

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Description
        %th Image

    %tbody
    - @laboratories.each do |laboratory|
      %tr
        %td= laboratory.name
        %td= laboratory.description
        %td= image_tag(laboratory.image.thumb.url)
        %td
          = link_to edit_laboratory_path(laboratory) do
            %button.btn.btn-success.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-edit
              Edit laboratory
        %td
          = link_to laboratory, method: :delete, data: {confirm: 'Do you want to delete this laboratory?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do
            %button.btn.btn-danger.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-trash
                Delete
