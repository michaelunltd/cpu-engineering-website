.container
  %h1 Facility#index
  .pull-right
    = link_to new_facility_path do
      %button.btn.btn-success.btn-sm{:role=> "button"}
        %i.glyphicon.glyphicon-plus
          Facility

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Description
        %th Image

    %tbody
    - @facilities.each do |facility|
      %tr
        %td= facility.name
        %td= facility.description
        %td= image_tag(facility.image.thumb.url)
        %td
          = link_to edit_facility_path(facility) do
            %button.btn.btn-success.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-edit
              Edit Facility
        %td
          = link_to facility, method: :delete, data: {confirm: 'Do you want to delete this facility?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do
            %button.btn.btn-danger.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-trash
                Delete
