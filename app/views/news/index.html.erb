<h1>News</h1>

<%= link_to new_news_path  do %>
    Add News
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image Path</th>
      <th>Author</th>
      <th>Manage</th>
    </tr>
  </thead>

  <% @news.each do |n| %>
  <tr>
    <td><%= n.title %></td>


    <td><%= n.content %></td>



    <td><%= n.img_path %></td>



    <td><%= n.author %></td>


    <td>
      <%= link_to edit_news_path(n)  do %>
          Edit News
      <% end %>

      <%= link_to n, method: :delete, data: {confirm: 'Do you want to delete this news?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do %>
          Delete
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
