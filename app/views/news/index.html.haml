.container
  %h1 News Archive
  .pull-right
    = link_to new_news_path do
      %button.btn.btn-success.btn-sm{:role=> "button"}
        %i.glyphicon.glyphicon-plus
          News
  %ul.bxslider
    - @latest.each do |n|
      %li
        = link_to news_path(n) do
          = image_tag(n.image.carousel.url, title: n.content)
  - @news.each do |n|
    .col-md-4
      .card
        .card-image
          %img.img-responsive{:src => n.image.carousel.url}
          %span.card-title= n.title
        .card-content
          %p= raw n.content
          %small{:style=> "color:gray"}
            by: #{n.author} at #{n.created_at.to_formatted_s(:short)}
        .card-action
          = link_to edit_news_path(n) do
            %button.btn.btn-success{:role=>"button"}
              %i.glyphicon.glyphicon-edit
              Edit
          = link_to n, method: :delete, data: {confirm: 'Do you want to delete this news?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do
            %button.btn.btn-danger{:role=>"button"}
              %i.glyphicon.glyphicon-trash
              Delete
          = link_to news_path(n) do
            %button.btn.btn-primary.pull-right{:role=>"button"}
              Read more
