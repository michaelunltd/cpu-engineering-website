<%= form_for form_model, url: {action: action} do |f| %>
  <div class="row">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, size: "150", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :img_path %>
      <%= f.file_field :img_path, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class:"form-control" %>
    </div>


    <div class="row">
    <div>
      <%= f.submit action.capitalize + " News" %>
    </div>
  </div>
</div>
<% end %>
