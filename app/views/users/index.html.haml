.container
  %h1 User#index
  .pull-right
    = link_to new_user_path do
      %button.btn.btn-success.btn-sm{:role=> "button"}
        %i.glyphicon.glyphicon-plus
          User

  %table.table.table-striped
    %thead
      %tr
        %th Username
        %th Delete

    %tbody
    - @users.each do |n|
      %tr
        %td= n.username
        %td
          = link_to n, method: :delete, data: {confirm: 'Do you want to delete this news?', verify: 'Delete', verify_text: 'Type "Delete" to confirm'} do
            %button.btn.btn-danger.btn-sm{:role=>"button"}
              %i.glyphicon.glyphicon-trash
                Delete
